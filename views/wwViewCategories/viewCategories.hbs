const listContainer = document.getElementById('list-container');

function updateList() {
  listContainer.innerHTML = ''; // Clear the current list
  items.forEach((item) => {
    // Create a new list item for each item in the list
    const listItem = document.createElement('li');
    listItem.innerHTML = `<span>${item.title}</span>`;
    listContainer.appendChild(listItem);
  });
}

select.addEventListener('change', () => {
  if (select.value === 'Star rating') {
    // Sort the items in the list by their star rating
    items.sort((a, b) => a.starRating - b.starRating);
  } else if (select.value === 'Price ascending') {
    // Sort the items in the list by their price in ascending order
    items.sort((a, b) => a.price - b.price);
  }
  updateList(); // Update the list with the sorted items
});
