	<script>
	const count = 0;
	function createChapter(){
		let e = document.getElementByID("Content");
		
		//add chapter
		let chapter = document.createElement("div");
		let data = document.createElement("data-count");
		data.value = count;
		let id = document.createElement("id");
		id.value = "Chapter";
		
		chapter.setAttributeNode(id);
		chapter.setAttributeNode(data);
		
		let html = '
			<div class="row" >
				<div class="form-group col-8 me-auto">
					<label for="txtCourseName">Course name</label>
					<input name="chapter[${count}]name" type="text" class="form-control" id="txtCourseName" autofocus placeholder="iPhone">
				</div>
				<button class="btn btn-primary" id="addLessonbtn">
					<i class="fa fa-check" aria-hidden="true"></i>
					Add
				</button>
				<button class="btn btn-primary" id="removeChapter" onClick="return this.parentNode.parentNode.remove()">
					<i class="fa fa-check" aria-hidden="true"></i>
					Remove
				</button>
			</div>
		  
			<div id="Lesson">
				
				
			</div>
			
		  '
		chapter.innerHTML = html;
		count = count + 1;

		e.appendChild(chapter);

	}
	
	function createLesson(e){
		let parent = e.target.parentNode.parentNode;
		let chapCount = parent.getAttribute("data-count");
		let e = parent.childNodes[1];
		
		//add lesson
		let lesson = document.createElement("div");

		let class = document.createElement("class");
		id.value = "row";
		lesson.setAttributeNode(class);
		
		let html = '
					<div class="col-9 me-auto">
						<div class="form-group">
							<label for="txtLessonName">Lesson name</label>
							<input name="chapter[${chapCount}]lessonName[]" type="text" class="form-control" id="txtLessonName" autofocus placeholder="Lesson">
						</div>
					
						<div class="form-group">
							<label for="txtLessonUrl">Video url</label>
							<input name="chapter[${chapCount}]lessonUrl[]" type="text" class="form-control" id="txtLessonUrl" autofocus placeholder="video url">
						</div>
					</div>
					<button class="btn btn-primary" id="removeLesson" onClick="return this.parentNode.remove()">
						<i class="fa fa-check" aria-hidden="true"></i>
						Remove
					</button>
		'
		lesson.innerHTML = html;
		e.appendChild(lesson);
	}
	</script>
  
  
  
